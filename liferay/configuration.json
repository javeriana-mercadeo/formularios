{
  "fieldSets": [
    {
      "fields": [
        {
          "name": "eventName",
          "label": "Nombre del Evento",
          "description": "Nombre del evento que se mostrará en el formulario",
          "type": "text",
          "dataType": "string",
          "typeOptions": {
            "placeholder": "Open Day 2024"
          }
        },
        {
          "name": "eventDate",
          "label": "Fecha del Evento",
          "description": "Fecha del evento en formato DD/MM/YYYY HH:mm AM/PM",
          "type": "text",
          "dataType": "string",
          "typeOptions": {
            "placeholder": "23/01/2025 12:00 PM"
          }
        }
      ],
      "label": "Configuración Básica"
    },
    {
      "fields": [
        {
          "name": "source",
          "label": "Fuente UTM",
          "description": "Fuente de tráfico (utm_source)",
          "type": "text",
          "dataType": "string",
          "typeOptions": {
            "placeholder": "website"
          }
        },
        {
          "name": "subSource",
          "label": "Sub-fuente UTM",
          "description": "Sub-fuente de tráfico (utm_subsource)",
          "type": "text",
          "dataType": "string",
          "typeOptions": {
            "placeholder": "organico"
          }
        },
        {
          "name": "medium",
          "label": "Medio UTM",
          "description": "Medio de tráfico (utm_medium)",
          "type": "text",
          "dataType": "string",
          "typeOptions": {
            "placeholder": "web"
          }
        },
        {
          "name": "campaign",
          "label": "Campaña UTM",
          "description": "Nombre de la campaña (utm_campaign)",
          "type": "text",
          "dataType": "string",
          "typeOptions": {
            "placeholder": "eventos_2024"
          }
        },
        {
          "name": "article",
          "label": "Artículo UTM",
          "description": "Artículo específico (utm_article)",
          "type": "text",
          "dataType": "string",
          "typeOptions": {
            "placeholder": "landing_principal"
          }
        }
      ],
      "label": "Parámetros UTM"
    },
    {
      "fields": [
        {
          "name": "typeAttendeeAspirante",
          "label": "Aspirante",
          "description": "Permitir aspirantes",
          "type": "checkbox",
          "defaultValue": true
        },
        {
          "name": "typeAttendeePadres",
          "label": "Padre de familia y/o acudiente",
          "description": "Permitir padres de familia",
          "type": "checkbox",
          "defaultValue": true
        },
        {
          "name": "typeAttendeeDocente",
          "label": "Docente y/o psicoorientador",
          "description": "Permitir docentes y psicoorientadores",
          "type": "checkbox",
          "defaultValue": true
        },
        {
          "name": "typeAttendeeVisitante",
          "label": "Visitante PUJ",
          "description": "Permitir visitantes PUJ",
          "type": "checkbox",
          "defaultValue": true
        },
        {
          "name": "typeAttendeeAdministrativo",
          "label": "Administrativo PUJ",
          "description": "Permitir administrativos PUJ",
          "type": "checkbox",
          "defaultValue": true
        },
        {
          "name": "typeAttendeeGraduado",
          "label": "Graduado",
          "description": "Permitir graduados",
          "type": "checkbox",
          "defaultValue": false
        },
        {
          "name": "attendanceDays",
          "label": "Días de Asistencia",
          "description": "Días disponibles para asistir (separados por comas)",
          "type": "text",
          "dataType": "string",
          "typeOptions": {
            "placeholder": "Lunes 10 de febrero,Martes 11 de febrero,Miércoles 12 de febrero"
          }
        }
      ],
      "label": "Configuración del Evento"
    },
    {
      "fields": [
        {
          "name": "academicLevelPREG",
          "label": "Pregrado",
          "description": "Permitir nivel pregrado",
          "type": "checkbox",
          "defaultValue": true
        },
        {
          "name": "academicLevelGRAD",
          "label": "Posgrado",
          "description": "Permitir nivel posgrado",
          "type": "checkbox",
          "defaultValue": true
        },
        {
          "name": "academicLevelCONT",
          "label": "Educación Continua",
          "description": "Permitir educación continua",
          "type": "checkbox",
          "defaultValue": true
        },
        {
          "name": "faculties",
          "label": "Facultades",
          "description": "Facultades permitidas (separadas por comas)",
          "type": "text",
          "dataType": "string",
          "typeOptions": {
            "placeholder": "Ingeniería,Medicina,Derecho,Ciencias Sociales"
          }
        },
        {
          "name": "programs",
          "label": "Programas",
          "description": "Códigos de programas permitidos (separados por comas)",
          "type": "text",
          "dataType": "string",
          "typeOptions": {
            "placeholder": "IINDS,MEDIC,DRCHO,PSICO,COMSC"
          }
        }
      ],
      "label": "Filtros Académicos"
    },
    {
      "fields": [
        {
          "name": "countries",
          "label": "Países",
          "description": "Países permitidos (separados por comas)",
          "type": "text",
          "dataType": "string",
          "typeOptions": {
            "placeholder": "Colombia,México,Ecuador,Perú,Estados Unidos,España"
          }
        },
        {
          "name": "departments",
          "label": "Departamentos (Colombia)",
          "description": "Departamentos permitidos (separados por comas)",
          "type": "text",
          "dataType": "string",
          "typeOptions": {
            "placeholder": "Cundinamarca,Antioquia,Valle del Cauca,Atlántico"
          }
        },
        {
          "name": "cities",
          "label": "Ciudades",
          "description": "Ciudades permitidas (separadas por comas)",
          "type": "text",
          "dataType": "string",
          "typeOptions": {
            "placeholder": "Bogotá,Medellín,Cali,Barranquilla"
          }
        }
      ],
      "label": "Filtros Geográficos"
    },
    {
      "fields": [
        {
          "name": "universities",
          "label": "Universidades",
          "description": "Universidades permitidas (separadas por comas)",
          "type": "text",
          "dataType": "string",
          "typeOptions": {
            "placeholder": "Universidad Nacional de Colombia,Universidad de los Andes,Universidad del Rosario"
          }
        },
        {
          "name": "colleges",
          "label": "Colegios",
          "description": "Colegios permitidos (separados por comas)",
          "type": "text",
          "dataType": "string",
          "typeOptions": {
            "placeholder": "Colegio San Patricio,Gimnasio Moderno,Colegio Anglo Colombiano"
          }
        },
        {
          "name": "companies",
          "label": "Empresas",
          "description": "Empresas permitidas (separadas por comas)",
          "type": "text",
          "dataType": "string",
          "typeOptions": {
            "placeholder": "Grupo Bancolombia,ECOPETROL,Grupo Nutresa"
          }
        }
      ],
      "label": "Entidades Externas"
    },
    {
      "fields": [
        {
          "name": "authorizationSource",
          "label": "Fuente de Autorización",
          "description": "Fuente de autorización de datos personales",
          "type": "text",
          "dataType": "string",
          "typeOptions": {
            "placeholder": "Landing Eventos"
          },
          "defaultValue": "Landing Eventos"
        },
        {
          "name": "requestOrigin",
          "label": "Origen de la Solicitud",
          "description": "Origen de la solicitud del lead",
          "type": "text",
          "dataType": "string",
          "typeOptions": {
            "placeholder": "Web to Lead"
          },
          "defaultValue": "Web to Lead"
        },
        {
          "name": "leadSource",
          "label": "Fuente del Lead",
          "description": "Fuente del lead en Salesforce",
          "type": "text",
          "dataType": "string",
          "typeOptions": {
            "placeholder": "Landing Pages"
          },
          "defaultValue": "Landing Pages"
        }
      ],
      "label": "Campos Ocultos"
    },
    {
      "fields": [
        {
          "name": "retUrl",
          "label": "URL de Redirección",
          "description": "URL a la que se redirige después del envío exitoso",
          "type": "text",
          "dataType": "string",
          "typeOptions": {
            "placeholder": "https://cloud.cx.javeriana.edu.co/EVENTOS_TKY"
          },
          "defaultValue": "https://cloud.cx.javeriana.edu.co/EVENTOS_TKY"
        },
        {
          "name": "privacyPolicyUrl",
          "label": "URL Política de Privacidad",
          "description": "URL de la política de tratamiento de datos",
          "type": "url",
          "dataType": "string",
          "typeOptions": {
            "placeholder": "https://cloud.cx.javeriana.edu.co/tratamiento_Datos_Javeriana_Eventos.html"
          },
          "defaultValue": "https://cloud.cx.javeriana.edu.co/tratamiento_Datos_Javeriana_Eventos.html"
        }
      ],
      "label": "URLs"
    },
    {
      "fields": [
        {
          "name": "test",
          "label": "Modo Test",
          "description": "Activar modo de pruebas (sandbox de Salesforce)",
          "type": "checkbox",
          "defaultValue": false
        },
        {
          "name": "debug",
          "label": "Modo Debug",
          "description": "Activar modo de depuración (logs detallados)",
          "type": "checkbox",
          "defaultValue": false
        },
        {
          "name": "development",
          "label": "Modo Desarrollo",
          "description": "Activar modo de desarrollo (no envía datos reales)",
          "type": "checkbox",
          "defaultValue": false
        },
        {
          "name": "debugEmail",
          "label": "Email de Debug",
          "description": "Email para recibir copias en modo debug",
          "type": "text",
          "dataType": "string",
          "typeOptions": {
            "placeholder": "debug@javeriana.edu.co"
          }
        }
      ],
      "label": "Configuración Técnica"
    },
    {
      "fields": [
        {
          "name": "cacheEnabled",
          "label": "Habilitar Cache",
          "description": "Activar cache para datos del formulario",
          "type": "checkbox",
          "defaultValue": false
        },
        {
          "name": "cacheExpirationHours",
          "label": "Horas de Expiración del Cache",
          "description": "Número de horas antes de que expire el cache",
          "type": "text",
          "dataType": "string",
          "typeOptions": {
            "placeholder": "12"
          },
          "defaultValue": "12"
        }
      ],
      "label": "Configuración de Cache"
    },
    {
      "fields": [
        {
          "name": "loggingEnabled",
          "label": "Habilitar Logging",
          "description": "Activar sistema de logs del formulario",
          "type": "checkbox",
          "defaultValue": false
        },
        {
          "name": "loggingLevel",
          "label": "Nivel de Logging",
          "description": "Nivel de detalle de los logs",
          "type": "select",
          "dataType": "string",
          "typeOptions": {
            "validValues": [
              { "value": "error", "label": "Error" },
              { "value": "warn", "label": "Warning" },
              { "value": "info", "label": "Info" },
              { "value": "debug", "label": "Debug" }
            ]
          },
          "defaultValue": "info"
        }
      ],
      "label": "Configuración de Logging"
    }
  ]
}
